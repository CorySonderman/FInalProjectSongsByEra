<!--
    This view displays a list of songs from the MySql database.
    Key Points:
    - Links to view, update, and delete each song.
    - Includes a link to create a new song.
-->
@model IEnumerable<ISong>

<h2>Song</h2>
<p><a asp-action="CreateSong">Create New Song</a></p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Genre</th>
        <th>Year Released</th>
    </tr>

    @foreach (var song in @Model)
    {
        <tr>
            <td><a asp-action="ViewSong" asp-route-id="@song.ID" asp-route-tableName="@($"songs_{song.YearReleased}s")">@song.ID</a></td>
            <td>@song.Title</td>
            <td>@song.Artist</td>
            <td>@song.Genre</td>
            <td>@song.YearReleased</td>
            <td>
            <a asp-action="UpdateSong" asp-route-id="@song.ID" asp-route-decade="@song.YearReleased">Update</a> |
            <a asp-action="DeleteSong" asp-route-id="@song.ID" asp-route-decade="@song.YearReleased">Delete</a>
            </td>
        </tr>
    }
</table>